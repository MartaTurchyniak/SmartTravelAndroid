<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@drawable/ic_trip_amico_pink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewBG"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/user_info_edit_bg"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/photo_bg"
        android:padding="20dp"
        android:src="@drawable/ic_add_a_photo"
        app:layout_constraintEnd_toEndOf="@id/viewBG"
        app:layout_constraintStart_toStartOf="@id/viewBG"
        app:layout_constraintTop_toTopOf="@id/viewBG" />

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:hint="First name"
        android:theme="@style/MyEditTextTheme"
        app:layout_constraintEnd_toEndOf="@id/viewBG"
        app:layout_constraintStart_toStartOf="@id/viewBG"
        app:layout_constraintTop_toBottomOf="@id/avatar" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Last name"
        android:theme="@style/MyEditTextTheme"
        app:layout_constraintEnd_toEndOf="@id/viewBG"
        app:layout_constraintStart_toStartOf="@id/viewBG"
        app:layout_constraintTop_toBottomOf="@id/etFirstName" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:enabled="false"
        tools:text="+380964267479"
        app:layout_constraintEnd_toEndOf="@id/viewBG"
        app:layout_constraintStart_toStartOf="@id/viewBG"
        app:layout_constraintTop_toBottomOf="@id/etLastName" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_btn_bg"
        android:paddingStart="50dp"
        android:paddingTop="15dp"
        android:paddingEnd="50dp"
        android:paddingBottom="15dp"
        android:text="Register"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/viewBG"
        app:layout_constraintStart_toStartOf="@id/viewBG"
        app:layout_constraintTop_toBottomOf="@id/phone" />


</androidx.constraintlayout.widget.ConstraintLayout>